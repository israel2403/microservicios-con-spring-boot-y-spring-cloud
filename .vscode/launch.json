    "version": "0.2.0",
    "configurations": [

        {
            "type": "java",
            "name": "Launch Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Launch SpringbootItemServiceApplication",
            "request": "launch",
            "mainClass": "com.huerta.springboot.app.item.springbootitemservice.SpringbootItemServiceApplication",
            "projectName": "springboot-item-service"
        },
        {
            "type": "java",
            "name": "Launch Service Products 1",
            "request": "launch",
            "mainClass": "com.huerta.springboot.app.products.springbootserviceproducts.SpringbootServiceProductsApplication",
            "projectName": "springboot-service-products",
            "vmArgs": "-Dserver.port=8001"
        },
        {
            "type": "java",
            "name": "Launch Service Products 2",
            "request": "launch",
            "mainClass": "com.huerta.springboot.app.products.springbootserviceproducts.SpringbootServiceProductsApplication",
            "projectName": "springboot-service-products",
            "vmArgs": "-Dserver.port=9001"
        }
    ]
}